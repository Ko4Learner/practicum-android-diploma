<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextMedium_22_500">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:textSize">@dimen/text_22</item>

    </style>

    <style name="TextRegular_16_400">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="TextMedium_16_500">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="TextBold_32_700">
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="fontWeight">700</item>
        <item name="android:textSize">@dimen/text_32</item>
    </style>

    <style name="Toolbar" parent="@style/TextMedium_22_500">
        <item name="maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ButtonSelect" parent="@style/TextMedium_22_500">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="ButtonReset" parent="@style/TextMedium_22_500">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="ChoiceList" parent="@style/TextRegular_16_400"></style>

    <style name="SearchLine" parent="@style/TextRegular_16_400">

        <item name="android:textColor">@color/black</item>
    </style>

    <style name="placeholderSearch" parent="@style/TextRegular_16_400">
        <item name="android:background">@drawable/placeholder_search</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:radius">12dp</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:paddingHorizontal">12dp</item>
    </style>

    <style name="mainSearchField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_56dp</item>
        <item name="android:layout_marginHorizontal">@dimen/_16dp</item>
        <item name="android:layout_marginVertical">@dimen/_8dp</item>
        <item name="android:background">@drawable/search_background</item>
        <item name="android:textColorHint">@color/DarkGraylightGray</item>
        <item name="android:paddingStart">@dimen/_14dp</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/SearchLine</item>
        <item name="android:paddingEnd">@dimen/_60dp</item>
    </style>

    <style name="progressBarSearchScreen">
        <item name="android:layout_width">@dimen/_48dp</item>
        <item name="android:layout_height">@dimen/_48dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:indeterminateTint">?attr/colorPrimary</item>
        <item name="android:layout_marginVertical">@dimen/_16dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="errMessageSearchScreen">
        <item name="android:textAppearance">@style/TextMedium_22_500</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="searchResultSearchScreen">
        <item name="android:background">@drawable/placeholder_search</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:paddingHorizontal">@dimen/_12dp</item>
        <item name="android:layout_marginTop">@dimen/_12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="recyclerSearchScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_0dp</item>
        <item name="android:layout_marginTop">@dimen/_8dp</item>
        <item name="android:paddingTop">@dimen/_38dp</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>
